{
  "name": "trello-clone-be",
  "version": "1.0.0",
  "description": "Trello Clone Backend with Express, TypeScript, Drizzle and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:clear": "tsx src/scripts/clearDb.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:auth": "cross-env NODE_ENV=test jest --runInBand auth.test",
    "test:board": "cross-env NODE_ENV=test jest --runInBand board.test",
    "test:card": "cross-env NODE_ENV=test jest --runInBand card.test",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration --runInBand",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:clean": "docker-compose -f docker-compose.test.yml down -v"
  },
  "keywords": [
    "express",
    "typescript",
    "drizzle",
    "postgresql",
    "trello"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.6",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.11",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.5",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
